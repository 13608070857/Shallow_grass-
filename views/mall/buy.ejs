                    <td class="money">¥<span>129.00</span></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!--提交订单-->
    <div class="row">
        <div class="col-xs-11 myadd">
            <div class="pull-left">
                <input type="checkbox" class="check_all">全选
                <button type="button" class="btn delete_btn"  data-toggle="modal" data-target="#myModal">删除</button>
            </div>
            <div class="pull-right">
                <a href="/confirm_order">
                    <button type="button" class="btn refer_btn">提交订单</button>
                </a>
            </div>
        </div>
