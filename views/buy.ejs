                    <td class="unit_price">¥<span>129.00</span></td>
                    <td>
                        <div>
                            <span class="pull-left numRedu numSpan"></span>
                            <input type="number" value="1" class="pull-left numValue">
                            <span class="pull-left numadd numSpan"></span>
                        </div>
                    </td>
                    <td class="subtotal">¥<span>129.00</span></td>
                    <td class="money">¥<span>129.00</span></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!--提交订单-->
    <div class="row">
        <div class="col-xs-11 myadd">
            <div class="pull-left">
                <input type="checkbox" class="check_all">全选
                <button type="button" class="btn delete_btn">删除</button>
            </div>
            <div class="pull-right">
                <button type="button" class="btn refer_btn">提交订单</button>
            </div>
        </div>
    </div>
</div>
<%-include('matefooter.ejs')%>
<script src="js/jquery-3.3.1.js"></script>
